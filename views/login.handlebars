<div class="flex justify-center">
  <div class="w-1/2 p-4">
    <h2 class="text-2xl text-center font-bold">Login</h2>
    <form class="form login-form mt-4">
      <div class="mb-4">
        <label class="block text-gray-700 font-medium" for="email-login">email:</label>
        <input class="w-full border border-gray-400 p-2" type="text" id="email-login" />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium" for="password-login">password:</label>
        <input class="w-full border border-gray-400 p-2" type="password" id="password-login" />
      </div>
      <div class="text-center">
        <button class="bg-indigo-500 text-white p-2 hover:bg-indigo-600" id="login-btn" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="w-1/2 p-4">
    <h2 class="text-2xl text-center font-bold">Signup</h2>
    <form class="form signup-form mt-4">
      <div class="mb-4">
        <label class="block text-gray-700 font-medium" for="name-signup">name:</label>
        <input class="w-full border border-gray-400 p-2" type="text" id="name-signup" />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium" for="email-signup">email:</label>
        <input class="w-full border border-gray-400 p-2" type="text" id="email-signup" />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium" for="password-signup">password:</label>
        <input class="w-full border border-gray-400 p-2" type="password" id="password-signup" />
      </div>
      <div class="text-center">
        <button class="bg-indigo-500 text-white p-2 hover:bg-indigo-600" id= "signup-btn" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>